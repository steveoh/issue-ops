{
  "name": "@steveoh/issue-ops",
  "version": "1.0.0",
  "description": "GitHub issue operations and automation tools",
  "keywords": [
    "github",
    "issues",
    "automation",
    "sgid"
  ],
  "license": "MIT",
  "author": "UGRC",
  "type": "module",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "bin": {
    "issue-ops-process": "lib/main.js"
  },
  "scripts": {
    "build": "pnpm clean && tsc",
    "check": "tsc -b",
    "clean": "rm -rf lib",
    "dev": "tsx src/main.ts",
    "process-issue": "pnpm build && node lib/main.js",
    "process-issue:dev": "tsx src/main.ts",
    "test": "pnpm build && c8 ava",
    "test:watch": "pnpm build && c8 ava --watch"
  },
  "ava": {
    "files": [
      "lib/test/**/*.test.js"
    ],
    "require": [
      "dotenv/config"
    ],
    "verbose": true
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "axios": "^1.10.0",
    "axios-retry": "^4.5.0",
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.4",
    "ky": "^1.8.1",
    "markdown-table": "^3.0.4",
    "pg": "^8.16.2",
    "tsx": "^4.20.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@esri/arcgis-rest-portal": "^4.6.1",
    "@esri/arcgis-rest-request": "^4.5.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^20.19.1",
    "@types/pg": "^8.15.4",
    "ava": "^6.4.0",
    "c8": "^10.1.3",
    "dotenv": "^16.5.0",
    "prettier": "^3.6.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.15",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16"
  }
}
